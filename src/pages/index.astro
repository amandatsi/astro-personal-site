---
import Main from "../layouts/Main.astro";
import Cards from "../components/Cards.astro";
const profilePicture = "https://townsquareinteractive.s3.amazonaws.com/amanda/2ASP5507.jpg";

//Astro.glob

const blogs = await Astro.glob<{
	title: string;
	poster: string;
	subtitle: string;
}>("../pages/blogs/*.md");
---

<Main title="Amanda Johnson">
	<div class="profile">
		<img
			alt="TEST"
			width="100px"
			height="100px"
			src={profilePicture}
			class="profile_picture"
		/>

		<div class="profile_details">
			<h1>Amanda Johnson</h1>
			<h2>VP of Life</h2>
			<p>
				Lorem ipsum dolor, sit amet consectetur adipisicing elit. Ipsam
				dolorum dolorem nobis at alias, minus deserunt commodi quis
				voluptatum eum maiores consectetur possimus ullam aut nam
				officiis incidunt veritatis? Eius?
			</p>
		</div>
	</div>
	<Cards
		cards={[
			{
				title: "Here are my guiding philosophies for life",
				gradientFrom: "#818cf8",
				gradientTo: "#d8b4fe",
				to: "/philosophies",
			},
			{
				title: "A summary of my work history",
				gradientFrom: "#fde68a",
				gradientTo: "#fca5a5",
				to: "/work-summary",
			},
			{
				title: "What I do beyond techology",
				gradientFrom: "#6ee7b7",
				gradientTo: "#9333ea",
				to: "/beyond-tech",
			},
		]}
	/>
	<div class="featured-blogs">
		<h3 class="featured-blogs_title">Featured Blogs</h3>
		<p class="featured-blogs_description">
			Opinion pieces that will cahnge everything you know about web
			development.
		</p>
	</div>

	<ol class="blogs">
		{
			blogs.map((blog) => (
				<li class="blogs_list">
					<a
						href={blog.url}
						class="blog_link"
					>
					{blog.frontmatter.title}
					</a>

				</li>
			))
		}
	</ol>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}

	.profile_details {
		flex: 1 0 300px;
	}

	.profile_details h1 {
		margin-top: 0;
	}

	.profile_picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}

	.featured-blogs {
		margin: 0;
		padding: 3rem 0 0 0;
	}

	.featured-blogs_title {
		font-size: 2rem;
		color: var(--grey-900);
	}

	.feature-blogs_description {
		margin-top: -1.2rem;
	}

	.blogs {
		font-size: 1rem;
		font-weight: 500;
	}

	.blog_list {
		border-bottom: 1px solid;
		border-color: var(--grey-200);
	}

	.blog_link {
		opacity: 1;
		height: 100%;
		display: block;
		padding: 1rem 0;
		color: var(--grey-200);
		text-decoration: none;
		transition: opacity 0.2s ease-in-out;
	}

	.blog_link:hover {
		opacity: 0.7;
	}
</style>
